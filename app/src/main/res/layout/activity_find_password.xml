<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPasswordActivity">

    <ImageView
        android:id="@+id/find_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:src="@drawable/close_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_close"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="60dp"
            android:text="SelecTrip"
            android:fontFamily="@font/puddingb"
            android:layout_marginBottom="20dp"
            android:textColor="#668EFD"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:gravity="center"
            android:fontFamily="@font/nanum_acb"
            android:textColor="#A6A6A6"
            android:text="셀렉트립에 가입했던 이메일을 입력해주세요.\n임시 비밀번호를 보내드립니다."
            android:padding="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounding_white"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:inputType="textEmailAddress"
            android:hint="email"
            android:padding="10dp"
            android:id="@+id/edit"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="비밀번호 재설정"
            android:textSize="17dp"
            android:id="@+id/find_ok"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/nanum_acb"
            android:background="@drawable/round_blue"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>